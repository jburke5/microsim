{
    /*
    For the "python.(python|flake8|autopep8)Path" settings, prefix them with the path to the
    virtualenv bin directory. If using poetry, will be the Virtualenv Path returned from the
    following command plus a `/bin` suffix:

    ```sh
    poetry debug:info
    ```
    */

    "python.pythonPath": "python",
    "python.linting.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.linting.flake8Path": "flake8",
    "python.formatting.provider": "autopep8",
    "python.formatting.autopep8Path": "autopep8",
    "python.formatting.autopep8Args": ["--aggressive", "--aggressive"],
    "python.unitTest.unittestEnabled": true,
    "python.unitTest.unittestArgs": ["--start-directory", "./mcm/test", "--pattern", "test_*.py"],
}
